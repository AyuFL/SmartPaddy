<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.homePage.HomeFragment"
    >

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/colorPrimary"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      android:padding="24dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="Hello Bella,"
          android:textColor="@color/white"
          android:textSize="18sp"
          android:textStyle="bold" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="Let's Learn More About Plants"
          android:textColor="@color/white"
          android:textSize="18sp"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_logout_24"
        android:background="@null"
        android:layout_gravity="end"
        android:layout_marginEnd="12dp"/>

  </androidx.appcompat.widget.Toolbar>

  <TextView
      android:id="@+id/home_title_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/you_have_been_detected"
      android:textSize="24sp"
      android:layout_marginTop="30dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"
      />

  <LinearLayout
      android:id="@+id/paddy_count_ll"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="30dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/home_title_tv"
      >

    <TextView
        android:id="@+id/paddy_count_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="52sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/home_subtitle_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Here's your detected diseases recap!"
      android:textSize="20sp"
      android:layout_marginTop="30dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/paddy_count_ll"
      />

  <TextView
      android:id="@+id/history_btn_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:focusable="true"
      android:text="@string/history"
      android:textSize="22sp"
      app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
      android:layout_marginTop="30dp"
      android:paddingHorizontal="24dp"
      android:clickable="true"
      app:layout_constraintTop_toBottomOf="@+id/home_subtitle_tv"
      />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/history_rv"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/history_btn_tv"
      />

</androidx.constraintlayout.widget.ConstraintLayout>